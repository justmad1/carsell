<% layout('index') %>
<% block('title', "Добавление")%>
<main class="main">
        <span>
            Введите характеристики для нового автомобиля
        </span>
        <form method="POST">
            <div class="row">
                <div class="input-field col s6">
                    <input value="Red" id="first_name2" type="text"
                        class="validate" name="color">
                    <label class="active" for="first_name2">Color</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input value="Ford" id="first_name2" type="text"
                        class="validate" name="model">
                    <label class="active" for="first_name2">Model</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <select name="complectation">
                        <option value="Standart" disabled selected>Choose your option</option>
                        <option value="Standart">Standart
                        </option>
                        <option value="Standart Plus">Standart Plus</option>
                        <option value="Premium">Premium</option>
                        <option value="Premium Plus">Premium Plus</option>
                        <option value="Luxury">Luxury</option>
                    </select>
                    <label>Select complectation</label>
                </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit"
                name="action">Добавить автомобиль
            </button>
        </form>
    </main>