<% layout('index') %>
<% block('title', "Авторизация") %>
<main class="main">
    <div style="margin-top:10%;" class="container">
            <div class="row">
                    <div class="col s6 m6">
                      <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                          <span class="card-title">Вход в аккаунт</span>
                          <div class="row">
                                <form class="col s12">
                                    <div class="row ">
                                            <div class="input-field col s12">
                                            <input id="login" type="email" class="validate">
                                            <label for="login">Email</label>
                                            <span class="helper-text" data-error="Данные введены неверно!"></span>
                                            </div>
                                        </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                        <input id="password" type="password" class="validate">
                                        <label for="password">Password</label>
                                        <span class="helper-text" data-error="Данные введены неверно!"></span>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div style="display: flex; flex-direction: row-reverse;" class="card-action">
                            <button class="login btn blue-grey darken-2 waves-effect waves-dark" type="submit"
                            name="action">Войти</button>
                        </div>
                      </div>
                    </div>
                    <div class="col s6 m6">
                            <div class="card blue-grey darken-1">
                              <div class="card-content white-text">
                                <span class="card-title">Регистрация</span>
                                <div class="row">
                                      <form class="col s12">
                                          <div class="row">
                                              <div class="input-field col s6">
                                              <input id="first_name" type="text" class="validate" value="Дмитрий">
                                              <label for="first_name">Имя</label>
                                              </div>
                                              <div class="input-field col s6">
                                              <input id="last_name" type="text" class="validate" value="Касперович">
                                              <label for="last_name">Фамилия</label>
                                              <span class="helper-text" data-error="Данные введены неверно!"></span>
                                              </div>
                                          </div>
                                          <div class="row">
                                              <div class="input-field col s6">
                                                <input id="email" type="email" class="validate" value="claywhoami@yandex.ru">
                                                <label for="email">Email</label>
                                                <span class="helper-text" data-error="Данные введены неверно!"></span>
                                              </div>
                                              <div class="input-field col s6">
                                                    <input id="new_password" type="password" class="validate" value="123">
                                                    <label for="new_password">Password</label>
                                                    <span class="helper-text" data-error="Данные введены неверно!"></span>
                                                </div>
                                          </div>
                                      </form>
                                  </div>
                              </div>
                              <div style="display: flex; flex-direction: row-reverse;" class="card-action">
                                  <button class="register btn blue-grey darken-2 waves-effect waves-dark" type="submit"
                                  name="action">Зарегистрироваться</button>
                              </div>
                            </div>
                          </div>
            </div>
    </div>
</main>

<script src="scripts/client/auth.js" type="text/javascript" defer></script>