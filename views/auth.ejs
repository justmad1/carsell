<div id="login" class="modal card light darken-1">
    <div class="modal-content card-content white-text">
        <span style="margin-left: 10px;" class="card-title teal-text">Вход в аккаунт</span>
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <input id="login" type="login">
                        <label for="login">Login</label>
                        <span class="helper-text" data-error="Данные
                            введены неверно!"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="password" type="password"
                            class="validate">
                        <label for="password">Password</label>
                        <span class="helper-text" data-error="Данные
                            введены неверно!"></span>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div style="display: flex; flex-direction: row-reverse;"
        class="card-action modal-footer">
        <button style="margin-right: 20px;" class="login btn teal waves-effect
            waves-dark" type="submit" name="action">Войти</button>
    </div>
</div>

<div id="register" class="modal card light darken-1">
    <div class="modal-content card-content white-text">
        <span style="margin-left: 10px;" class="card-title teal-text">Регистрация</span>
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s6">
                        <input id="first_name" type="text"
                            class="validate">
                        <label for="first_name">Имя</label>
                    </div>
                    <div class="input-field col s6">
                        <input id="last_name" type="text"
                            class="validate">
                        <label for="last_name">Фамилия</label>
                        <span class="helper-text" data-error="Данные
                            введены неверно!"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <input id="login" type="login">
                        <label for="login">Login</label>
                        <span class="helper-text" data-error="Данные
                            введены неверно!"></span>
                    </div>
                    <div class="input-field col s6">
                        <input id="new_password" type="password"
                            class="validate">
                        <label for="new_password">Password</label>
                        <span class="helper-text" data-error="Данные
                            введены неверно!"></span>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div style="display: flex; flex-direction: row-reverse;"
        class="card-action modal-footer">
        <button style="margin-right: 20px;" class="register btn teal waves-effect
            waves-dark" type="submit" name="action">Зарегистрироваться</button>
    </div>
</div>
